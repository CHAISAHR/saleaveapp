
# Database Configuration - Railway will provide these automatically
# If using Railway's MySQL addon, you can use DATABASE_URL or MYSQL_URL instead
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=leave_management
DB_PORT=3306

# Alternative: Railway MySQL URL (replaces individual DB_* variables)
# DATABASE_URL=mysql://user:password@host:port/database
# MYSQL_URL=mysql://user:password@host:port/database

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Server Configuration - Railway sets PORT automatically
PORT=3001
NODE_ENV=production

# Frontend URL - Set this to your Railway frontend domain
FRONTEND_URL=https://your-frontend-domain.up.railway.app

# Email Configuration (SendGrid)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
# Verify your domain/sender at: https://app.sendgrid.com/settings/sender_auth
SENDGRID_API_KEY=SG.your_api_key_here
